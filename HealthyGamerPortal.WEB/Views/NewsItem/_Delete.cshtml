
@model HealthyGamerPortal.Common.ViewModels.News.DeleteNewsItemViewModel

<modal-form size="Large" title="Delete a News Item">
    <form asp-action="Delete" id="validate-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.Id)
        <div class=row>
            <form-entry asp-for="Name" input-type="Text" read-only="true"  column-width="12"></form-entry>
        </div>
        <div class="row">
            <form-entry asp-for="Item" input-type="Textarea" read-only="true" column-width="12"></form-entry>
        </div>
    </form>
</modal-form>