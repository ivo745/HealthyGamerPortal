@model HealthyGamerPortal.Common.ViewModels.News.EditNewsItemViewModel

<modal-form size="Large" title="Edit a News item">
    <form asp-action="Edit" id="validate-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.Id)
        <div class=row>
            <form-entry asp-for="Name" input-type="Text"  column-width="12"></form-entry>
        </div>
        <div class="row">
            <form-entry asp-for="Item" input-type="Textarea" column-width="12"></form-entry>
        </div>
    </form>
</modal-form>